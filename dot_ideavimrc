" Settings
set hlsearch
set incsearch 
set number 
set relativenumber
set ignorecase
set smartcase

let mapleader = ","

" Plugins
Plug 'tpope/vim-commentary'
Plug 'tpope/vim-surround'

" Keymaps
map <leader>gf <Action>(GotoFile)
map <C-K> <C-W>k
map <C-L> <C-W>l
map <C-J> <C-W>j
map <C-H> <C-W>h

nmap <leader>rn <Action>(RenameElement)
nmap <leader>gr <Action>(ChangesView.Revert)
nmap <leader>gp <Action>(Github.Open.In.Browser)

nmap <leader>l <Action>(RecentFiles)

" Diagnostic
nmap ]d <Action>(GotoNextError)
nmap [d <Action>(GotoPreviousError)

" Git Hunks
nmap ]h <Action>(VcsShowNextChangeMarker)
nmap [h <Action>(VcsShowPrevChangeMarker)
