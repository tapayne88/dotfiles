# override omz's common-aliases for ls with eza commands
alias ls='eza --group-directories-first --icons'

alias l='ls --long --classify="always" --header'
alias la='ls --long --all'
alias lt='ls --tree'
alias ll='ls --long'
alias lg='ls --long --git'
alias ldot='ls --long --list-dirs .*'
alias lrt='ls --long --classify="always" --reverse --time="modified" --header'

alias lvi='NVIM_APPNAME=LazyVim nvim'
