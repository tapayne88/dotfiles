[user]
    name = Tom Payne
    email = thomas.payne@skybettingandgaming.com
[core]
    editor = vim
	pager = less -x4
[color]
    diff = auto
    status = auto
    branch = auto
[push]
    default = current
[alias]
    st = status
    cm = commit
    co = checkout
    pl = pull --ff-only
    ft = fetch
    mg = merge
    mb = merge --no-ff --no-commit
    mt = mergetool
    ch = cherry-pick
    rb = rebase
    ru = reset --hard @{u}
    inject = "!f() { set -e; HASH=`git show $1 --pretty=format:\"%H\" -q`; shift; git commit -m \"fixup! $HASH\" $*; [ -n \"$(git diff-files)\" ] && git stash && DIRTY=1; git rebase $HASH^^ -i --preserve-merges --autosquash; [ -n \"$DIRTY\" ] && git stash pop;}; f"
    ps = push
    br = branch
    df = diff
    dfc = diff --cached
    dfu = !sh -c 'git diff $0..@{u} $@' 2> /dev/null
    dt = difftool
    review = difftool @{u}
    grp = grep -I -n
    l = log --oneline --decorate
    lg = log
    lgu = log @{u}
    lp = log -p
    qlog = log --graph --pretty=tformat:'%Cgreen %h %Creset %an %Cred %ad (%ar) %Cgreen %s %Creset %d' --abbrev-commit --decorate --parents --date=short
    h = log --graph --pretty=tformat:'%C(yellow) %h %C(cyan) %ad %C(red) %an %Creset %s %C(blue bold)%d%Creset' --abbrev-commit --decorate --parents --date=short --first-parent -n32 --topo-order
    hf = log --graph --pretty=tformat:'%C(yellow) %h %C(cyan) %ad %C(red) %an %Creset %s %C(blue bold)%d%Creset' --abbrev-commit --decorate --parents --date=short -n32 --date-order
	prune-local = "!git branch -vv | grep -nE 'origin/.*: gone' | awk '{print $2}' | xargs git branch -D"
[diff]
    tool = fugitive
    compactionHeuristic = 1
[difftool "fugitive"]
    cmd = vim -c \"execute 'Gstatus' | wincmd p | Gvdiff ~1\" $MERGED
[merge]
    tool = splice
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[bash]
    showDirtyState = true
[pager]
    show = diff-so-fancy | less
    log = diff-so-fancy | less
    diff = diff-so-fancy | less
